@model royuie.Models.ManageAccountViewModel

@{
    ViewData["Title"] = "Manage Account";
}

<h2>Manage Your Account</h2>

<form asp-action="Manage" method="post" class="mt-3">
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AddressLine1"></label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AddressLine2"></label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PostCode"></label>
        <input asp-for="PostCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="State"></label>
        <input asp-for="State" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<hr />

