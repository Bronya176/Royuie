@model royuie.Models.Product
@{
    ViewData["Title"] = @Model.Name;
}

<div class="container my-5">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 text-center mb-4">
            <img src="~/images/@Model.ImagePath" class="img-fluid rounded shadow-sm" alt="@Model.Name" style="max-width: 400px;" />
        </div>

        <!-- Product Info -->
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Name</h2>
            <p class="text-muted mb-2"><strong>Price:</strong> <i class="fas fa-dollar-sign"></i>@Model.Price</p>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="mb-4">@Model.Description</p>
            }
            else
            {
                <p class="text-muted mb-4"><i class="fas fa-info-circle"></i> No description available.</p>
            }

            <form asp-controller="Cart" asp-action="AddToCart" method="get">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-dark btn-lg">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                </button>
            </form>
        </div>
    </div>
</div>